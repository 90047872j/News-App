<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical">

        <TextView
            android:id="@+id/section_textView"
            android:text="Section name"
            style="@style/tv_section_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/pDate_textView"
            android:text="Date"
            style="@style/tv_date_style" />

        <TextView
            android:id="@+id/author_textView"
            android:text="Author"
            style="@style/tv_author_style" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_textView"
            android:text="Title"
            style="@style/tv_title_style" />

        <TextView
            android:id="@+id/information_textView"
            android:text="information"
            style="@style/tv_information_style" />

    </LinearLayout>
